<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

<!-- Bottom 2dp Shadow -->
<item android:top="5dp" android:left="5dp" android:bottom="2dp" android:right="2dp">
    <shape  android:shape="rectangle">

        <solid android:color="#15000000" />
        <corners android:radius="20dp" />

    </shape>
</item>

<!-- White Top color -->
<item android:top="5dp" android:left="5dp" android:bottom="5dp" android:right="5dp">

    <shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!--  Gradient Bg for listrow -->
    <gradient
        android:startColor="#18FFFFFF"
        android:endColor="#03FFFFFF"
        android:angle="315" />
    <corners android:bottomRightRadius="20dp"
        android:bottomLeftRadius="20dp"
        android:topRightRadius="20dp"
        android:topLeftRadius="20dp"/>

</shape>

</item>


</layer-list>